<image src="../../images/weather_bg.jpg" class="bg"></image>
<view class="container">
  <view class="nowweather">
    <view class="city w">北京市 大兴区</view>
    <view class="road w">金苑路</view>
    <view class="temp w b">1°</view>
    <view class="weather w">多云 | 空气 良</view>
  </view>

  <view class="weatherDetail">
      <view class="">
        <view class="w center">南风</view>
        <view class="w b center f50">2级</view>
       </view>
       <view class="l"></view>
       <view class="">
        <view class="w center">相对湿度</view>
        <view class="w b center f50">27%</view>
       </view>
       <view class="l"></view>
       <view class="">
        <view class="w center">体感温度</view>
        <view class="w b center f50">-2°</view>
       </view>
  </view>




</view>
<view class="futureWeather">
  <view class="forcast">
    <view class="w">周日</view>
    <image class="img" src='../../images/weather_null.png'></image>
    <view class="w">晴</view>
    <view class="w">-7℃/4℃</view>
  </view>
  <view class="forcast">
    <view class="w">周一</view>
    <image class="img" src='../../images/weather_null.png'></image>
    <view class="w">多云</view>
    <view class="w">-7℃/4℃</view>
  </view>
  <view class="forcast">
    <view class="w">周二</view>
    <image class="img" src='../../images/weather_null.png'></image>
    <view class="w">晴</view>
    <view class="w">-6℃/5℃</view>
  </view>

</view>

