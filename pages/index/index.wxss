/**common css**/
.w{
  color: white;
}
.b{
  font-weight: bold;
}
 
.l{
  border: 1rpx solid #fff;
}
 
.center{
  text-align: center;
  margin: auto 0;
}
 
.hor{
  display: flex;
}
 
.f50{
  font-size: 30rpx;
}
 
/**index css**/
 
 
.bg {
  width: 100%;
  height: 1200rpx;
}
 
.temp{
  font-size: 170rpx;
}
 
.container {
  position: absolute;
  left: 40rpx;
  top: 50rpx;
  width: 100%;
  padding: 0;
  margin: 0;
  height: 700rpx;
  display: block;
}
 
.nowWeather{
  padding: 60rpx;
}
 
.weatherDetail{
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  position: absolute;
  bottom: 50rpx;
  right:40rpx;
}

.futureWeather{
  width: 100%;
  display: flex;
  flex-direction: column;
  position: absolute;
  bottom: 60rpx;
  left:40rpx;
}


 
.forcast{
  padding: 30rpx;
  margin-left: 16rpx;
  margin-right: 16rpx;
  border-bottom: 1rpx solid #eee;
  justify-content:space-around;
  display: flex;
  flex-direction: row;
}
 
.img{
  width: 60rpx;
  height: 60rpx;
  margin-right: 16rpx;
}




